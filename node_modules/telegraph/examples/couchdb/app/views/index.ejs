<h1>Telegraph Todo</h1>

<%- form.start("todo", { id: "new-todo-form" }) %>
<div class="clearfix">
    <%- form.text_field("task", { autofocus: "autofocus" }) %>
</div>
<%- form.end() %>

<ul id="todo">
    <% tasks.forEach(function(task) { %>
    <li>
        <label for="<%= task._id %>"><input type="checkbox" name="<%= task._id %>"  id="<%= task._id %>" /> <%= task.task %></label>
    </li>
    <% }); %>
</ul>
